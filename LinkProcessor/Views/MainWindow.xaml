<Window x:Class="LinkProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LinkProcessor - Обработка ссылок в документах" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть файл..." Command="{Binding OpenFileCommand}"/>
                <Separator/>
                <MenuItem Header="Последние файлы" ItemsSource="{Binding RecentFiles}">
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem">
                            <Setter Property="Header" Value="{Binding}"/>
                            <Setter Property="Command" Value="{Binding DataContext.OpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            <Setter Property="CommandParameter" Value="{Binding}"/>
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Выход" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Настройки">
                <MenuItem Header="Параметры обработки..." Command="{Binding OpenSettingsCommand}"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Панель инструментов -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="Gainsboro">
            <Button Content="Обработать" Command="{Binding ProcessLinksCommand}" Padding="5,2" FontWeight="Bold" Margin="10,5,5,5"/>
            <CheckBox Content="Обратный режим (Номера -> Ссылки)" IsChecked="{Binding IsReverseMode}" VerticalAlignment="Center" Margin="5"/>
            <Label Content="Начало нумерации списка:" VerticalAlignment="Center"></Label>
            <TextBox Text="{Binding FirstListValue}" Width="70" Margin="5" VerticalAlignment="Center"></TextBox>
        </StackPanel>

        <!-- Основная рабочая область -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: список ссылок -->
            <DockPanel Grid.Column="0">
                <TextBlock DockPanel.Dock="Top" Text="Найденные ссылки:" FontWeight="Bold" Margin="5,0,0,5"/>

                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Выбрать все" Command="{Binding SelectAllLinksCommand}" Padding="5,2" Margin="5,0,5,0"/>
                    <Button Content="Снять все" Command="{Binding DeselectAllLinksCommand}" Padding="5,2" Margin="0,0,5,0"/>
                </StackPanel>

                <Border BorderBrush="#CCCCCC" BorderThickness="1">
                    <ListBox ItemsSource="{Binding FoundLinks}" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected}" Margin="2">
                                    <CheckBox.Content>
                                        <TextBlock Text="{Binding DisplayText}" 
                                                   TextWrapping="Wrap" 
                                                   MaxWidth="300"/>
                                    </CheckBox.Content>
                                </CheckBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Правая панель: результаты обработки -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Обработанный текст -->
                <DockPanel Grid.Row="0" Margin="0,5,0,0">
                    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Button DockPanel.Dock="Right" 
                                Content="📋 Копировать" 
                                Command="{Binding CopyProcessedTextCommand}" 
                                Padding="5,2" 
                                Margin="5,0,5,0"/>
                        <TextBlock Text="Обработанный текст:" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </DockPanel>

                    <Border BorderBrush="#CCCCCC" BorderThickness="1">
                        <TextBox Text="{Binding ProcessedText, Mode=OneWay}" 
                                 IsReadOnly="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 Padding="5"/>
                    </Border>
                </DockPanel>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

                <!-- Список источников -->
                <DockPanel Grid.Row="2" Margin="0,5,0,0">
                    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Button DockPanel.Dock="Right" 
                                Content="📋 Копировать" 
                                Command="{Binding CopyReferenceListCommand}" 
                                Padding="5,2" 
                                Margin="5,0,5,0"/>
                        <TextBlock Text="Список источников:" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </DockPanel>

                    <Border BorderBrush="#CCCCCC" BorderThickness="1">
                        <TextBox Text="{Binding ReferenceList, Mode=OneWay}" 
                                 IsReadOnly="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 Padding="5"/>
                    </Border>
                </DockPanel>
            </Grid>
        </Grid>

        <!-- Статус-бар -->
        <StatusBar Grid.Row="3" Height="28">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                    <TextBlock Text="{Binding StatusText}" Margin="0,0,10,0"/>
                    <ProgressBar Width="100" 
                                 Height="16" 
                                 IsIndeterminate="True" 
                                 Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"/>
                    <Button Content="📜 Просмотр логов" 
                            Command="{Binding ShowLogsCommand}" 
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>